{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/user.schema.json",
  "title": "User Profile",
  "description": "A simple user profile with address, preferences and tags.",
  "type": "object",
  "required": ["name", "age", "email"],
  "properties": {
    "name": {
      "type": "string",
      "title": "Full Name",
      "minLength": 2,
      "description": "Your full legal name"
    },
    "email": {
      "type": "string",
      "format": "email",
      "title": "Email Address"
    },
    "age": {
      "type": "integer",
      "minimum": 0,
      "maximum": 130,
      "title": "Age"
    },
    "website": {
      "type": "string",
      "format": "url",
      "title": "Personal Website",
      "description": "Optional"
    },
    "newsletter": {
      "type": "boolean",
      "title": "Subscribe to newsletter",
      "default": true
    },
    "favoriteColor": {
      "type": "string",
      "title": "Favorite Color",
      "enum": ["red", "green", "blue", "yellow", "purple"]
    },
    "tags": {
      "type": "array",
      "title": "Tags",
      "items": { "type": "string" },
      "default": ["engineer", "gamer"]
    },
    "address": {
      "type": "object",
      "title": "Address",
      "required": ["street", "city"],
      "properties": {
        "street": { "type": "string", "title": "Street" },
        "city": { "type": "string", "title": "City" },
        "zip": { "type": "string", "title": "ZIP", "pattern": "^[0-9]{5}$" }
      }
    },
    "workHistory": {
      "type": "array",
      "title": "Work History",
      "items": {
        "type": "object",
        "required": ["company", "years"],
        "properties": {
          "company": { "type": "string", "title": "Company" },
          "role": { "type": "string", "title": "Role" },
          "years": { "type": "number", "title": "Years", "minimum": 0 }
        }
      }
    }
  }
}